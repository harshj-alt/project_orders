<p id="notice"><%= notice %></p>

<% if logged_in? && current_user.admin?%>
    <h1 class="center">Products</h1>
    <div class="center">
    <%= will_paginate @product%>
    </div>

    <table class="table table-bordered bbox">
      <thead class="dark">
        <tr>
          <th>product name</th>
          <th>Product price</th>
          <th>Product sku</th>
          <th>Product image</th>
          <th>Actions</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.pname %> <br>
            <% if logged_in? && current_user.admin?%>
            <small>Created by: <%= product.user.username if product.user %>,
                                <%= time_ago_in_words(product.created_at) %>
                                last updated: <%= time_ago_in_words(product.updated_at) %> ago
            </small>
            <% end %>
            </td>

            <td><%= product.pprice %></td>
            <td><%= product.psku %></td>
            <td><div class="row">
                  <div class="col-xs-6 col-md-3">
                    <a href="#" class="thumbnail">
                      <%= image_tag(product.pimage) %> 
                    </a>
                  </div>
                </div>
            </td>
            <td><%= link_to 'Show', product %>
            <%  if logged_in? && (current_user==product.user || current_user.admin?) %>
            <%= link_to 'Edit', edit_product_path(product) %>
            <% end %>
            <%  if logged_in? && current_user.admin? %>
            <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="center">
    <%= will_paginate @product%>
    </div>
  <% else %>
       <h1 class="center">Welcome</h1>
       <div class="center">
        <%= will_paginate @product%>
       </div>

       <div class="container ">
        <% @products.each do |product| %>
           <div class="col">
            <div class="col-sm-6 col-md-3">
              <div class="thumbnail">
                <%= image_tag(product.pimage) %>
                <div class="caption">
                  <h5><%= product.pname %></h5>
                  <%
=begin%>
 <p><small><%= product.description%></small></p> 
<%
=end%>
                  <p><%= link_to "Show",product,class: "btn btn-primary" %></p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="center">
        <%= will_paginate @product%>
      </div>

  <% end %>
