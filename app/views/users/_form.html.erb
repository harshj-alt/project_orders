<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username ,placeholder:"enter username" %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email ,placeholder:"enter email" %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password ,placeholder:"enter password"%>
  </div>

    <%= form.fields_for :addresses do |p| %>
        <div class="field">
        <%= p.label :housename %>
        <%= p.text_field :housename, placeholder: "enter housename" %>
        </div>
        <div class="field">
        <%= p.label :street %>
        <%= p.text_field :street, placeholder: "enter street" %>
        </div>
        <div class="field">
        <%= p.label :city %>
        <%= p.text_field :city, placeholder: "enter city" %>
        </div>
        <div class="field">
        <%= p.label :pincode %>
        <%= p.text_field :pincode, placeholder: "enter city" %>
        </div>
    <% end %>

  <div class="actions">
    <%= form.submit(@user.new_record? ? "Signup" : "Update Account")%>
  </div>
<% end %>
