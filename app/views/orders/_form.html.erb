<%= form_with(model: order, local: true) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <div class="field">
      <%= form.label :order_number %>
      <%= form.number_field :order_number ,:value =>"#{rand(100..1000)}",:readonly => true,class:"form-control"%>
    </div>

    <div class="field">
      <%= form.label :order_type %>
      <%= form.text_field :order_type ,:required =>true,class:"form-control"%>
    </div>


    <div class="field">
      <%= form.label :orderdate %>
      <%= form.text_field :orderdate ,:value => "#{Date.today}", :readonly => true %>
    </div>
    </div>
    <%= form.fields_for :lineitems do |f| %>
      <div class="form-group">
        <div class="field" >
          <%= f.label :product_id %>
          <%= f.select :product_id,options_for_select(Product.all.collect{|c| [c.pname,c.id]}), class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :quantity %>
          <%= f.text_field :quantity,:required =>true,class:"form-control" %>
        </div>
      </div>
    <% end %>
    <div class="field">
      <%= form.label :total %>
      <%= form.text_field :total,class:'form-control' %>
    </div>

    <div class="form-group">
      <div class="field">
        <%= form.label :user_id %>
        <%= form.text_field :user_id, :value=>current_user.id ,:readonly =>true,class:"form-control"%>
      </div>
      <div class="field">
        <%= form.label :address_id %>
        <%= form.select :address_id,options_for_select(current_user.addresses.all.collect{|c| [c.city]}), class: 'form-control' %>

      </div>

      <div class="actions">
        <%= form.submit class: 'btn btn-default'%>
      </div>
    </div>
<% end %>



