<p id="notice"><%= notice %></p>


<div class="jumbotron">
  
  <div class="container">
  
      <div class="row col-xl-12" style="color:black">
        <div class="col-sm-6">
          <strong>Product Image</strong>
          <p>
            <%=image_tag((Product.find_by(params[@order.product_id]).pimage))%>
          <p>
          <div>
            <small>
              Product Name:
              <%= (Product.find_by(params[@order.product_id]).pname) %>
              <br>
              Product Id:
              <%= @order.product_id %>
              <br>
              Order Number:
              <%= @order.order_number %>
              <br>
              <br>
              Product Description:
              <br>
              <%= (Product.find_by(params[@order.product_id]).description) %>
            </small>
          </div>
        </div>
